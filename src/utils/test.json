{
	"wordSchema": {
		"type": "object",
		"properties": {
			"word": {
				"type": "string"
			},
			"phonetic": {
				"type": "string"
			},
			"blocks": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"partOfSpeech": {
							"type": "string",
							"enum": [
								"noun",
								"verb",
								"adjective",
								"adverb",
								"pronoun",
								"preposition",
								"conjunction",
								"interjection",
								"exclamation",
								"abbreviation",
								"phrase"
							]
						},
						"definitions": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"definition": {
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"lang": {
													"type": "string"
												},
												"content": {
													"type": "string"
												}
											},
											"required": ["lang", "content"]
										}
									},
									"synonyms": {
										"type": "array",
										"items": {
											"type": "string"
										}
									},
									"antonyms": {
										"type": "array",
										"items": {
											"type": "string"
										}
									},
									"example": {
										"type": "array",
										"items": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"lang": {
														"type": "string",
														"enum": ["en", "tw"]
													},
													"content": {
														"type": "string"
													}
												},
												"required": ["lang", "content"]
											}
										}
									}
								},
								"required": ["definition", "synonyms", "antonyms", "example"]
							}
						}
					},
					"required": ["partOfSpeech", "definitions"]
				}
			}
		},
		"required": ["word", "phonetic", "blocks"]
	}
}
